<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LabelActive">
        <item name="android:textSize">14sp</item>
        <!--<item name="android:textStyle">@integer/font_textStyle_medium</item>-->
    </style>

    <style name="LabelInactive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#BDBDBD</item>
    </style>

    <style name="Widget.AppCompat.Button.Colored.MyButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@drawable/text_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SubLabelActive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#9C9C9C</item>
    </style>

    <style name="SubLabelInactive">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#BDBDBD</item>
    </style>

    <!-- invest second style -->
    <style name="investSecond" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">#6a6a6a</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/silver</item>
    </style>

    <!-- Button Widget Style -->
    <style name="Peoplefund.Widget.Button" parent="android:Widget.Button">
        <!-- button background, touch feed back -->

        <!-- button minimum size -->
        <item name="android:minWidth">96dp</item>
        <item name="android:minHeight">48dp</item>

        <!-- button text style -->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>


</resources>
